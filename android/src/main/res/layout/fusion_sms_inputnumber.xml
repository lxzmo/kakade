<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/fusion_sms_inputrootrl"
    android:layout_width="match_parent"
    android:paddingTop="200dp"
    android:layout_height="match_parent">
    <RelativeLayout
        android:id="@+id/fusion_getsms_inputnumrl"
        android:layout_width="match_parent"
        android:layout_alignParentTop="true"
        android:paddingLeft="24dp"
        android:layout_height="36dp">
        <TextView
            android:id="@+id/fusion_getsms_numbeare"
            android:layout_width="wrap_content"
            android:paddingHorizontal="8dp"
            android:text="+86"
            android:gravity="center_vertical"
            android:textSize="15sp"
            android:textColor="@color/black"
            android:layout_height="match_parent"
            />
        <EditText
            android:id="@+id/fusion_getsms_inputnum"
            android:layout_toRightOf="@id/fusion_getsms_numbeare"
            android:layout_width="match_parent"
            android:gravity="center_vertical"
            android:textSize="14sp"
            android:maxLength="11"
            android:background="@null"
            android:focusable="true"
            android:inputType="number"
            android:hint="请输入您要用于登录的手机号"
            android:textColorHint="@color/DimGray"
            android:textColor="@color/black"
            android:layout_height="match_parent"/>
        <View
            android:layout_width="match_parent"
            android:background="@color/DimGray"
            android:paddingHorizontal="18dp"
            android:layout_below="@+id/fusion_getsms_numbeare"
            android:layout_height="0.5dp"/>
    </RelativeLayout>

    <TextView
        android:id="@+id/fusion_getsms_requestcode"
        android:layout_width="match_parent"
        android:paddingVertical="12dp"
        android:text="获取验证码"
        android:layout_below="@+id/fusion_getsms_inputnumrl"
        android:gravity="center_horizontal"
        android:textSize="16sp"
        android:textColor="@color/white"
        android:layout_marginTop="32dp"
        android:background="@drawable/fusion_upsms_sendsms"
        android:layout_marginHorizontal="16dp"
        android:layout_height="wrap_content"/>
    <RelativeLayout
        android:id="@+id/fusion_getsms_privacyrl"
        android:layout_width="match_parent"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="64dp"
        android:visibility="gone"
        android:layout_height="wrap_content">
        <CheckBox
            android:id="@+id/fusion_getsms_privacycb"
            android:layout_width="25dp"
            android:layout_alignParentLeft="true"
            android:layout_alignParentTop="true"
            android:layout_marginLeft="12dp"
            android:layout_height="25dp"/>
        <TextView
            android:id="@+id/fusion_getsms_privacytext"
            android:layout_width="match_parent"
            android:layout_toRightOf="@id/fusion_getsms_privacycb"
            android:text=""
            android:layout_marginRight="16dp"
            android:gravity="left"
            android:layout_marginLeft="4dp"
            android:textColor="@color/black"
            android:textSize="12sp"
            android:lineSpacingExtra="4dp"
            android:layout_height="wrap_content"/>
    </RelativeLayout>
</RelativeLayout>